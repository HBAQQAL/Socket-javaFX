<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="323.0" prefWidth="334.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <TextField fx:id="nameField" prefHeight="25.0" prefWidth="229.0" />
   <Label prefHeight="30.0" prefWidth="97.0" text="UserName">
      <font>
         <Font size="20.0" />
      </font>
   </Label>

  <Label fx:id="welcomeText" />
  <Button id="connectButton" fx:id="cntbtn" onAction="#onHelloButtonClick" text="Connect" />
   <Label fx:id="status" prefHeight="39.0" prefWidth="73.0" text="status" textAlignment="CENTER">
      <font>
         <Font size="27.0" />
      </font>
   </Label>
</VBox>
